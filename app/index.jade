extends layout

block content

  nav.uk-navbar.uk-navbar-attached.dogfort-navbar(data-uk-sticky)
    a.uk-navbar-brand.uk-hidden-small.brand-font(href="/") dogfort.v5 &nbsp;
    span.uk-badge.uk-badge-warning beta

    .uk-navbar-flip(ng-show='isAuthenticated')
      ul.uk-navbar-nav
        li
          a(data-uk-offcanvas="{target:'#menu'}")
            span.sm-avatar-frame(display: 'inline-block')
              img(ng-src="http://www.gravatar.com/avatar/{{authedUser.gravatarHash}}?s=20")
            | &nbsp; @{{authedUser.username}} &nbsp;

  br
  .ng-view

  #menu.uk-offcanvas
    .uk-offcanvas-bar.uk-offcanvas-bar-flip
      .uk-panel
        a(href="#/logout") logout

  #register.uk-modal
    .uk-modal-dialog
      .uk-modal-close.uk-close
      form.uk-form(ng-submit='register()')
        .uk-form-row
          input.uk-form-large.uk-form-width-medium(ng-model='newuser.username', type='text', placeholder='username')
        .uk-form-row
          input.uk-form-large.uk-form-width-medium(ng-model='newuser.email', type='text', placeholder='email')
        .uk-form-row
          input.uk-form-large.uk-form-width-medium(ng-model='newuser.password', type='password', placeholder='password')
        .uk-form-row
          button.uk-button.uk-button-large.uk-button-primary register






